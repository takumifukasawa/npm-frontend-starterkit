{
  "name": "npm-frontend-starterkit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run server & npm run watch",
    "watch": "npm run pug -- -w & npm run watchify & npm run sass -- -w -r --source-map true & npm run postcss -- -w",
    "server": "live-server public",
    "pug": "pug _develop/pug/entry/*.pug -P --hierarchy -O config/pug.json -o public/",
    "sass": "node-sass --output-style expanded --output tmp/css --source-map-contents _develop/scss/entry/",
    "postcss": "postcss --config config/postcss.json --dir public/assets/css tmp/css/*.css",
    "watchify": "watchify _develop/js/entry/index.js -t babelify -o 'exorcist public/assets/js/index.js.map > public/assets/js/index.js' -d -v",
    "sprity-front-pc": "sprity create ./public/assets/images/front/ ./_develop/images/sprite/front-pc/*.png --prefix sprite-front-pc -n _sprite-front-pc --orientation binary-tree -c /assets/images/front -s ../../../../_develop/scss/module/_sprite-front-pc.scss sprity-sass",
    "sprity-front-sp": "sprity create ./public/assets/images/front/ ./_develop/images/sprite/front-sp/*.png --prefix sprite-front-sp -n _sprite-front-sp --orientation binary-tree -c /assets/images/front -s ../../../../_develop/scss/module/_sprite-front-sp.scss sprity-sass -d 1:72 -d 2:144"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "latest",
    "babel-core": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-stage-0": "latest",
    "babelify": "latest",
    "browserify": "latest",
    "css-mqpacker": "latest",
    "cssnano": "latest",
    "exorcist": "latest",
    "live-server": "latest",
    "lwip": "latest",
    "node-sass": "latest",
    "postcss": "latest",
    "postcss-cli": "latest",
    "pug": "latest",
    "pug-cli": "latest",
    "sprity": "latest",
    "sprity-cli": "latest",
    "sprity-sass": "latest",
    "uglifyjs": "latest",
    "watchify": "latest"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
